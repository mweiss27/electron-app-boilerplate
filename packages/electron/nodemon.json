{
  "ignore": ["**/*.test.ts", ".git", "node_modules"],
  "watch": ["./src/**/*.ts"],
  "restartable": "rs",
  "verbose": true,
  "ext": "js,json,ts",
  "exec": "electron src/app.ts",
  "execMap": {
    "ts": "node --require ts-node/register --require tsconfig-paths/register"
  },
  "env": {
    "NODE_ENV": "development"
  }
}
